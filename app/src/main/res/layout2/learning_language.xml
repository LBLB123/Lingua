<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3333"
    android:scrollbarSize="8dp"
    tools:context=".LearningLanguage">

    <Button
        android:id="@+id/AppLanguage"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:elevation="1dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:text="Choose the app language"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/space_grotesk_bold"
        android:scrollbarSize="8dp"
        android:text="I want to learn:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppLanguage" />

    <Button
        android:id="@+id/English"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:fontFamily="@font/space_grotesk_bold"
        android:onClick="englishLanguage"
        android:text="@string/English"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text"
        app:rippleColor="#17DBCF" />

    <Button
        android:id="@+id/German"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:fontFamily="@font/space_grotesk_bold"
        android:onClick="germanLanguage"
        android:text="@string/German"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/English"
        app:rippleColor="#17DBCF" />

    <Button
        android:id="@+id/Portuguese"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/button_corners1"
        android:backgroundTint="#17DBCF"
        android:fontFamily="@font/space_grotesk_bold"
        android:onClick="portugueseLanguage"
        android:text="@string/Portuguese"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/German"
        app:rippleColor="#17DBCF" />

    <Button
        android:id="@+id/Continue"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_corners2"
        android:backgroundTint="#3B8681"
        android:fontFamily="@font/space_grotesk_bold"
        android:onClick="continueButton"
        android:text="@string/Continue"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#17DBCF" />

    <ImageView
        android:id="@+id/UKFlag2"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text"
        app:srcCompat="@drawable/uk_flag" />

    <ImageView
        android:id="@+id/GermanFlag"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UKFlag2"
        app:srcCompat="@drawable/german_flag" />

    <ImageView
        android:id="@+id/PortugueseFlag"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="76dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GermanFlag"
        app:srcCompat="@drawable/portugal_flag" />

</androidx.constraintlayout.widget.ConstraintLayout>